<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgtonystart"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tonystark"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony stark"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgtonystart"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@iamironman.com"
                android:layout_toRightOf="@id/imgtonystart"
                android:layout_below="@id/txtname"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgtonystart"
                android:layout_below="@id/txtemail"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSteveRogers"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/captain_america"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtNameSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Rogers"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgSteveRogers"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtEmailSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="steve@iamcaptainamerica.com"
                android:layout_toRightOf="@id/imgSteveRogers"
                android:layout_below="@id/txtNameSteve"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtPhoneSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgSteveRogers"
                android:layout_below="@id/txtEmailSteve"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgThor"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/thor"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtNameThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgThor"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtEmailThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thor@godofthunder.com"
                android:layout_toRightOf="@id/imgThor"
                android:layout_below="@id/txtNameThor"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtPhoneThor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgThor"
                android:layout_below="@id/txtEmailThor"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBlackWidow"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtNameWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steve Rogers"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgBlackWidow"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtEmailWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blackwidow@avenger.com"
                android:layout_toRightOf="@id/imgBlackWidow"
                android:layout_below="@id/txtNameWidow"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtPhoneWidow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgBlackWidow"
                android:layout_below="@id/txtEmailWidow"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBlackPanther"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/black_panther"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Black Panther"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtEmailPanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blackpanther@wakandaforever.com"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:layout_below="@id/txtPanther"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtPhonePanther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgBlackPanther"
                android:layout_below="@id/txtEmailPanther"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHulk"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/hulk"
                android:layout_margin="20dp" />
            <TextView
                android:id="@+id/txtNameHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hulk"
                android:textSize="18dp"
                android:layout_toRightOf="@id/imgHulk"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="#dd2c00"/>
            <TextView
                android:id="@+id/txtEmailHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hulk@avenger.com"
                android:layout_toRightOf="@id/imgHulk"
                android:layout_below="@id/txtNameHulk"
                android:textColor="#0091ea"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/txtPhoneHulk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgHulk"
                android:layout_below="@id/txtEmailHulk"
                android:textColor="#26a69a"
                android:text="+91 111112222233"
                android:textSize="18dp"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>